<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="15dp"
                android:text="This app displays lake conditions of Trout, Sparkling and Mendota.\n Sparkling/Trout data is provided from a meteorogical/limnological buoy operated by the Center for Limnology, University of Wisconsin, Madison.\n Mendota data is  provided from a meteorogical/limnological buoy operated jointly by CFL and AOS, University of Wisconsin, Madison."
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:padding="15dp"
                android:text="University of Wisconsin is not liable for any damage incurred from the use of this software/application"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <Button
                android:id="@+id/ok"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:background="@color/white"
                android:fontFamily="sans-serif"
                android:onClick="onClick"
                android:paddingBottom="15dp"
                android:text="OK"
                android:textColor="@color/black"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



