<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" "
            android:id="@+id/lakeName_tab"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="600dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Update time"
            android:id="@+id/updateTime_tab"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp"
            android:textSize="20dp"
            android:textColor="#1130db" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/updateTime_tab"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/relativeLayout"></RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout2"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="76dp"
                android:id="@+id/temp_image"
                android:src="@android:drawable/ic_menu_save"
                android:layout_weight="0.13"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearLayout2"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Air"
                    android:id="@+id/air_temp_prompt"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="53"
                    android:id="@+id/air_temp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="35dp"
                    android:textColor="#303F9F"
                    android:layout_marginTop="-4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="°F"
                    android:id="@+id/air_unit"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="-7dp"
                    android:textColor="#4da8f5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:id="@+id/linearLayout4"
                android:layout_marginRight="25dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="39dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Water"
                    android:id="@+id/water_temp_prompt"
                    android:layout_gravity="center_horizontal"
                    android:textIsSelectable="false"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="53"
                    android:id="@+id/water_temp"
                    android:layout_gravity="center"
                    android:textSize="35dp"
                    android:layout_marginTop="-5dp"
                    android:textColor="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="°F"
                    android:id="@+id/water_temp_unit"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-7dp"
                    android:textSize="20dp"
                    android:textColor="#54abf5" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout3"
            android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="76dp"
                android:id="@+id/wind_image"
                android:src="@android:drawable/ic_menu_save"
                android:layout_weight="0.13"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Speed"
                    android:id="@+id/wind_speed_prompt"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="14.6"
                    android:id="@+id/wind_speed"
                    android:layout_gravity="center_horizontal"
                    android:textSize="35dp"
                    android:textColor="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="m/s"
                    android:id="@+id/wind_speed_unit"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="-10dp"
                    android:textColor="#5baef5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_marginRight="29dp"
                android:layout_marginEnd="29dp"
                android:id="@+id/linearLayout5"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Dir"
                    android:id="@+id/wind_dir_prompt"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="32°"
                    android:id="@+id/wind_dir"
                    android:layout_gravity="center"
                    android:textSize="35dp"
                    android:textColor="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/wind_dir_unit"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="-10dp"
                    android:textColor="#5baef5" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout4"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="76dp"
                android:id="@+id/water_image"
                android:src="@android:drawable/ic_menu_save"
                android:layout_weight="0.13"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/linearLayout3"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Thermo"
                    android:id="@+id/thermo_prompt"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20"
                    android:id="@+id/thermo"
                    android:layout_gravity="center_horizontal"
                    android:textSize="35dp"
                    android:textColor="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="m"
                    android:id="@+id/thermo_unit"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="-10dp"
                    android:textColor="#54abf5" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.13"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:layout_marginRight="25dp"
                android:layout_marginEnd="31dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Clarity"
                    android:id="@+id/secchi_prompt"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25dp"
                    android:textColor="#265f90" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="20"
                    android:id="@+id/secchi"
                    android:layout_gravity="center"
                    android:textSize="35dp"
                    android:textColor="#303F9F" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="m"
                    android:id="@+id/secchi_unit"
                    android:layout_gravity="center_horizontal"
                    android:textSize="20dp"
                    android:layout_marginTop="-10dp"
                    android:textColor="#54abf5" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>